{
  "private": true,
  "name": "news-radar",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --no-prerender",
    "serve": "npm run build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src && eslint functions",
    "test": "nyc mocha ./functions/test/*-test.js",
    "coverage": "NODE_ENV=test nyc report --reporter=text-lcov"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "no-unused-vars": "warn",
      "react/sort-comp": "off",
      "lines-around-comment": "off",
      "react/prefer-stateless-function": "off"
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "repository": "https://github.com/spacerockzero/news-radar",
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "chai": "^4.1.2",
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "eslint-plugin-import": "^2.8.0",
    "if-env": "^1.0.0",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "preact-cli": "^2.0.0",
    "prettier": "1.8.2"
  },
  "dependencies": {
    "asyncawait": "^1.0.6",
    "firebase": "^4.8.0",
    "lodash.map": "^4.6.0",
    "lodash.sortby": "^4.7.0",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-material-components": "^1.2.4",
    "preact-router": "^2.5.5"
  }
}
