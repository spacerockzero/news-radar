{
	"database": {
		"rules": "database.rules.json"
	},
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"hosting": {
		"public": "build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "/search",
				"function": "search"
			},
			{
				"source": "/newarticles",
				"function": "newArticles"
			},
			{
				"source": "**",
				"desination": "/build/index.html"
			}
		]
	},
	"storage": {
		"rules": "storage.rules"
	}
}
